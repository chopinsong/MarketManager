<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/purchase_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        style="@style/title_style"
        android:text="@string/ps_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/purchase_cancel_btn"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/cancel_button"
                android:gravity="center"
                android:src="@drawable/ic_close" />

            <LinearLayout
                android:id="@+id/ps_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_switch_shipment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/purchase_button" />

                <Switch
                    android:id="@+id/is_p_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/img_switch_purchase"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="2dp"
                    android:contentDescription="@string/shipment_button" />
            </LinearLayout>

            <ImageView
                android:id="@+id/commit_btn"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/commit_button"
                android:gravity="center"
                android:src="@drawable/ic_check" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/input_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ps_layout_input_ed_margin"
                android:layout_marginStart="@dimen/ps_layout_input_ed_margin"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/customer_hint_text"
                    android:src="@drawable/ic_user" />

                <EditText
                    android:id="@+id/customer_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/customer_hint_text"
                    android:inputType="textAutoComplete"
                    android:labelFor="@+id/customer_et"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/ps_et_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ps_layout_input_ed_margin"
                android:layout_marginStart="@dimen/ps_layout_input_ed_margin"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/price_hint"
                    android:src="@drawable/ic_price" />

                <EditText
                    android:id="@+id/price_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/price_hint"
                    android:inputType="number|numberDecimal"
                    android:labelFor="@+id/price_et"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/ps_et_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ps_layout_input_ed_margin"
                android:layout_marginStart="@dimen/ps_layout_input_ed_margin"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp"
                    android:contentDescription="@string/purchase_count_hint"
                    android:src="@drawable/ic_count" />

                <EditText
                    android:id="@+id/purchase_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/purchase_count_hint"
                    android:inputType="number"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/ps_et_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ps_layout_input_ed_margin"
                android:layout_marginStart="@dimen/ps_layout_input_ed_margin"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/remark_hint"
                    android:src="@drawable/ic_remark" />

                <EditText
                    android:id="@+id/remark_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/remark_hint"
                    android:inputType="textAutoComplete"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/ps_et_text_size" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <include
                android:id="@+id/goods_picker_root"
                layout="@layout/goods_picker_layout" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_goods_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_goods_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/add_goods_text"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/select_present_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/select_present"
                android:textColor="@color/colorAccent" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>