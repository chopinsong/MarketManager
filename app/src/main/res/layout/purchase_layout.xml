<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/purchase_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/purchase_cancel_btn"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:src="@drawable/ic_close"/>

        <LinearLayout
            android:id="@+id/ps_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_switch_shipment"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <Switch
                android:id="@+id/is_p_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="24dp"
                android:layout_marginStart="2dp"
                android:id="@+id/img_switch_purchase"
                android:layout_height="24dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/commit_btn"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:src="@drawable/ic_check"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/input_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/customer_et"
                android:layout_marginStart="5dp"
                android:text="@string/customer_hint"
                android:textColor="@color/black2" />

            <EditText
                android:id="@+id/customer_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="textAutoComplete"
                android:labelFor="@+id/customer_et"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/price_et"
                android:layout_marginStart="5dp"
                android:text="@string/price_hint"
                android:textColor="@color/black2" />

            <EditText
                android:id="@+id/price_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:labelFor="@+id/price_et"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/purchase_count"
                android:layout_marginStart="5dp"
                android:text="@string/purchase_count"
                android:textColor="@color/black2" />

            <EditText
                android:id="@+id/purchase_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/remark_tv"
                android:layout_marginStart="5dp"
                android:text="@string/remark"
                android:textColor="@color/black2" />

            <EditText
                android:id="@+id/remark_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="textAutoComplete"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            android:id="@+id/goods_picker_root"
            layout="@layout/goods_picker_layout" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_goods_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_goods_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/add_goods_text"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/select_present_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/select_present"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

</LinearLayout>